{
  "name": "node-notes-api",
  "version": "1.0.0",
  "description": "A RESTful API for note-taking with user authentication, built with Node.js, Express, MySQL, and Redis",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsoa spec && tsoa routes && node scripts/extract-tsoa-schemas.js && tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run build && node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:ts": "ts-node src/server.ts",
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "test:setup": "node scripts/setup-test-db.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:full": "npm run test:setup && npm test"
  },
  "keywords": [
    "node",
    "express",
    "mysql",
    "redis",
    "jwt",
    "api",
    "notes",
    "authentication"
  ],
  "author": "Abhinav George Basil",
  "license": "ISC",
  "dependencies": {
    "@tsoa/runtime": "^6.6.0",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.11.4",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.6.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
